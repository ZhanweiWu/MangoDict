<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="300dp"
	android:layout_height="160dp" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="80dp" android:gravity="top"
		android:layout_gravity="top|center">

		<ImageView android:id="@+id/stateIcon" android:layout_width="wrap_content"
			android:src="@drawable/record_idle_icon" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" />

		<TextView android:id="@+id/stateMessage"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/recording" android:layout_gravity="center_vertical"
			android:layout_marginLeft="5dp" style="@android:style/TextAppearance.Medium" />

	</LinearLayout>

	<ImageView android:src="@android:drawable/divider_horizontal_dark"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:scaleType="fitXY" />

	<View android:layout_height="20dp" android:layout_width="fill_parent"></View>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="46dp" android:paddingLeft="6dp">

		<ImageButton android:id="@+id/recordButton"
			android:layout_height="fill_parent" style="@android:style/MediaButton"
			android:src="@drawable/ic_btn_record" />

		<ImageButton android:id="@+id/playButton"
			android:layout_height="fill_parent" style="@android:style/MediaButton"
			android:src="@drawable/ic_btn_play" />

		<ImageButton android:id="@+id/stopButton"
			android:layout_height="fill_parent" style="@android:style/MediaButton"
			android:src="@drawable/ic_btn_stop" />

		<ImageButton android:id="@+id/wordButton"
			android:layout_height="fill_parent" style="@android:style/MediaButton"
			android:src="@drawable/ic_btn_speech" />

	</LinearLayout>

</LinearLayout>