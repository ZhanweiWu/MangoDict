<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal" android:minHeight="42dp"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/listview_selected" android:padding="6dp">
		<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</ImageView>
		<TextView android:id="@+id/text" android:layout_gravity="center_vertical"
			android:gravity="center_vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>
</LinearLayout>